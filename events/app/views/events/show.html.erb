<article>
  <header>
    <h1><%= @event.name %></h1>
  </header>
  <p>
    <%= @event.description %>
  </p>
  <h3>When</h3>
  <p>
    <%= @event.starts_at %>
  </p>
  <h3>Where</h3>
  <p>
    <%= @event.location %>
  </p>
  <h3>Price</h3>
  <p>
    <%= format_price(@event) %>
  </p>
  <h3>Capacity</h3>
  <p>
    <%= pluralize(@event.capacity, 'spot') %> available.
  </p>
  <%= link_to("Who's registered?", event_registrations_path(@event)) %>
  <h3>Image File Name</h3>
  <p>
    <%= @event.image_file_name %>
  </p>
</article>

<p>
  <%= register_link(@event) %>
  <%= link_to "Edit", edit_event_path(@event) %> |
  <%= link_to "Delete", event_path(@event), method: :delete, data: { confirm: 'Are you sure?'} %>
</p>
