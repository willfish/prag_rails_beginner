<header id="content-header">
  <h1>Registration for <%= link_to(@movie.title, @movie)%></h1>
</header>

<%= form_for([@movie, @review]) do |f| %>
<%= render 'shared/errors', object: @review %>
<fieldset>
  <ol>
    <li class="required">
    <%= f.label :name %>
    <%= f.text_field :name, size: 40, autofocus: true %>
    </li>
    <li class="required">
      <%= f.label :stars %>
      <%= f.select :stars, Review::STARS, prompt: 'Pick One' %>
    </li>
    <li class="required">
      <%= f.label :comment %>
      <%= f.text_area :comment, size: 40 %>
    </li>
  </ol>
  <p>
    <%= f.submit %> |
    <%= link_to 'Cancel', movies_path, class: 'button' %>
  </p>
</fieldset>
<% end %>
