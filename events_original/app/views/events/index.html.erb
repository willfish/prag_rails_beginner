<h1><%= pluralize(@events.count, 'Event') %></h1>

<% @events.each do |event| %>
  <article>
    <header>
      <h2><%= link_to(event.name, event) %></h2>
    </header>
    <p>
      <%= truncate(event.description) %>
    </p>

    <table>
      <tr>
        <th>When:</th>
        <td><%= event.starts_at %></td>
      </tr>
      <tr>
        <th>Where:</th>
        <td><%= event.location %></td> 
      </tr>
      <tr>
        <th>Price:</th>
        <td><%= format_price(event) %></td>
      </tr>
    </table>
  </article>
<% end %>
