<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<%= link_to 'Add New Movie', new_movie_path(@movie) %>

<% @movies.each do |movie| %>
  <article class='movie'>
    <header>
      <h2><%= movie.title %></h2>
      <p>
        <%= image_for(movie) %><br>
      </p>
    </header>
    <p>
      <%= truncate(movie.description) %>
    </p>
    <table>
      <tr>
        <th>
          Released:
        </th>
        <td>
          <%= movie.released_on %>
        </td>
      </tr>
      <tr>
        <th>
          Rating:
        </th>
        <td>
          <%= movie.rating %>
        </td>
      </tr>
      <tr>
        <th>
          Total Gross:
        </th>
        <td>
          <%= format_price(movie) %>
        </td>
      </tr>
      <tr>
        <th>
          Duration:
        </th>
        <td>
          <%= movie.duration %>
        </td>
      </tr>

      <tr>
        <th>
          Director:
        </th>
        <td>
          <%= movie.director %>
        </td>
      </tr>

      <tr>
        <th>
          Cast:
        </th>
        <td>
          <%= movie.cast %>
        </td>
      </tr>
      <tr>
        <th>
          Movie URL:
        </th>
        <td>
          <%= link_to movie.title, movie_path(movie) %>
        </td>
      </tr>
    </table>
  </article>
<% end %>
