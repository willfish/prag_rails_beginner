<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<%= link_to 'Add New Movie', new_movie_path(@movie) %>

<% @movies.each do |movie| %>
  <article>
    <header>
      <h2><%= movie.title %></h2>
    </header>
    <p>
      <%= truncate(movie.description) %>
    </p>
    <table>
      <tr>
        <th>
          Released:
        </th>
        <td>
          <%= movie.released_on %>
        </td>
      </tr>
      <tr>
        <th>
          Rating:
        </th>
        <td>
          <%= movie.rating %>
        </td>
      </tr>
      <tr>
        <th>
          Total Gross:
        </th>
        <td>
          <%= format_price(movie) %>
        </td>
      </tr>
      <tr>
        <th>
          Movie URL:
        </th>
        <td>
          <%= link_to movie.title, movie_path(movie) %>
        </td>
      </tr>
    </table>
  </article>
<% end %>
